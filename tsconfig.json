{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "outDir": "dist",

    "strict": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["bcrypt", "cors", "express", "formidable", "mongodb", "node"],
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
